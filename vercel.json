{
    "version": 2,
    "builds": [
      { "src": "mon", "use": "@vercel/static-build", "config": { "distDir": "mon/build" } },
      { "src": "api/sendEmail.js", "use": "@vercel/node" }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "api/sendEmail.js" },
      { "src": "/(.*)", "dest": "mon/build/$1" }
    ]
  }
  