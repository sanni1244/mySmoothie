{
    "version": 2,
    "builds": [
      {
        "src": "mon/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "mon/build"
        }
      },
      {
        "src": "api/sendEmail.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      { "handle": "filesystem" },
      { "src": "/api", "dest": "api/sendEmail.js" }
    ]
  }
  